{
  "name": "codepilot-ai",
  "displayName": "CodePilot-AI",
  "publisher": "Fassih",
  "icon": "icon.png",
  "description": "VS Code extension powered by LangGraph AI agents",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:codepilot.generateBoilerplate",
    "onCommand:codepilot.editCode",
    "onCommand:codepilot.explainCode",
    "onCommand:codepilot.chatWithCode"
  ],
"contributes": {
  "commands": [
    {
      "command": "codepilot.generateBoilerplate",
      "title": "游놓 CodePilot: Generate Boilerplate"
    },
    {
      "command": "codepilot.editCode",
      "title": "游놓 CodePilot: Edit Code"
    },
    {
      "command": "codepilot.explainCode",
      "title": "游놓 CodePilot: Explain Selected Code"
    },
    {
      "command": "codepilot.chatWithCode",
      "title": "游놓 CodePilot: Chat With Codebase"
    }
  ],
  "menus": {
    "editor/context": [
      {
        "command": "codepilot.explainCode",
        "when": "editorHasSelection",
        "group": "navigation"
      },
      {
        "command": "codepilot.editCode",
        "when": "editorHasSelection",
        "group": "navigation"
      },
      {
        "command": "codepilot.generateBoilerplate",
        "group": "navigation"
      },
      {
        "command": "codepilot.chatWithCode",
        "group": "navigation"
      }
    ]
  }
},
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
